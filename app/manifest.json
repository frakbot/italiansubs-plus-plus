{
    "name": "__MSG_appName__",
    "version": "1.2.8",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "64": "images/icon-64.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": "images/logo.png",
        "default_title": "italiansubs-plus-plus",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "page": "background.html"
    },
    "default_locale": "en",
    "omnibox": {
        "keyword": "italiansubs-plus-plus"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.italiansubs.net/*"
            ],
            "exclude_matches": [
                "*://img.italiansubs.net/*"
            ],
            "scripts": [
                "scripts/jquery-1.7.2.js",
                "scripts/itasa.js"
            ],
            "styles": []
        }
    ],
    "permissions": [
        "http://www.italiansubs.net/",
        "tabs"
    ],
    "web_accessible_resources": [
        "css/plus-font.css",
        "css/plus-font-maxi.css",
        "css/plus-shorter-post.css",
        "css/plus-contrast.css",
        "css/plus-separator.css",
        "css/roboto.css",
        "css/plus-roboto.css",
        "css/plus-kitkat.css",
        "css/plus-better-overlay.css",
        "css/plus-better-itasa.css",
        "css/plus-highlighted-menu.css",
        "css/plus-yvonne-spoiler.css",
        "font/droid-sans-mono.woff",
        "font/Roboto-Regular-webfont.woff",
        "images/yvonne-spoiler/plus_yvonne_button_open.png",
        "images/yvonne-spoiler/plus_yvonne_button_open.png",
        "images/kitkat/header-mask.png",
        "images/kitkat/header-logo.png",
        "images/kitkat/header-toggle.png",
        "images/kitkat/header-blog-logo.png",
        "images/kitkat/header-blog-cubes.png",
        "images/kitkat/stripes-bg.png",
        "images/kitkat/logout.png",
        "images/kitkat/footer-logo.png"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}